{
  "name": "azapfy-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "src/web/**",
    "configuration/**",
    "src/library/**",
    "src/design/**"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "web": "pnpm --filter web",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prod": "turbo run build & pnpm --filter web start"
  },
  "devDependencies": {
    "eslint-config-custom": "workspace:*",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@7.26.2"
}